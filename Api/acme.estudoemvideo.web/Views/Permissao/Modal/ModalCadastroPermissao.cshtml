@model acme.estudoemvideo.util.ViewModel.Seguranca.Site.PermissaoViewModel

@{
    ViewData["Title"] = "ModalCadastroPermissao";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="ModalCadastroPermissao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input id="nome" asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nivel" class="control-label"></label>
                <input id="nivel" asp-for="Nivel" class="form-control" />
                <span asp-validation-for="Nivel" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <input type="button" value="Cadastrar" onclick="cadastro_permissao()" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

